# Frontend Environment Configuration Example with Mockups
# Copy this file to .env and update the values for your local development

# ===========================================
# API Configuration
# ===========================================

# Backend API base URL - points to your backend server
REACT_APP_API_URL=http://localhost:5000/api

# API timeout in milliseconds
REACT_APP_API_TIMEOUT=10000

# ===========================================
# Development Configuration  
# ===========================================

# Environment mode
REACT_APP_ENV=development

# Enable debug logging in browser console
REACT_APP_DEBUG=true

# Skip preflight check for development
SKIP_PREFLIGHT_CHECK=true

# Generate sourcemap for debugging
GENERATE_SOURCEMAP=true

# ===========================================
# Feature Flags
# ===========================================

# Use mock data instead of real API (useful for offline development)
REACT_APP_USE_MOCK_DATA=false

# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable OAuth authentication buttons
REACT_APP_ENABLE_GOOGLE_AUTH=true
REACT_APP_ENABLE_GITHUB_AUTH=true

# ===========================================
# UI Configuration
# ===========================================

# App theme (light, dark, auto)
REACT_APP_THEME=auto

# Default language (en, es)
REACT_APP_DEFAULT_LANGUAGE=en

# Currency display format
REACT_APP_DEFAULT_CURRENCY=USD
REACT_APP_CURRENCY_SYMBOL=$

# ===========================================
# Analytics & Monitoring (optional)
# ===========================================

# Google Analytics tracking ID
# REACT_APP_ANALYTICS_ID=G-XXXXXXXXXX

# Enable error reporting to Sentry
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn-here

# ===========================================
# Build Configuration
# ===========================================

# Public URL for the app (for deployment)
# PUBLIC_URL=/

# Build path (optional)
# BUILD_PATH=build

# Port for development server (optional)
# PORT=3000

# ===========================================
# Mock Data Configuration
# ===========================================

# Mock user data for development
REACT_APP_MOCK_USER_EMAIL=user@example.com
REACT_APP_MOCK_USER_NAME=John Doe

# Mock initial balance for demo
REACT_APP_MOCK_INITIAL_BALANCE=50000

# Mock number of transactions to generate
REACT_APP_MOCK_TRANSACTION_COUNT=50